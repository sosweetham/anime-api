{
  "name": "anime-api",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "format": "bun --elide-lines 0 --filter '*' format ",
    "check-format": "bun --elide-lines 0 --filter '*' format",
    "lint": "bun --elide-lines 0 --filter '*' lint",
    "check-lint": "bun --elide-lines 0 --filter '*' lint",
    "check": "bun --elide-lines 0 --filter '*' check",
    "api::dev": "bun --filter @anime-api/api dev"
  },
  "packageManager": "bun@1.2.7"
}
